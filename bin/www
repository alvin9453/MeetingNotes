#!/usr/bin/nodejs
var debug = require('debug')('my-application');
var app = require('../app');

var port = 3261;

app.set('port', process.env.PORT || port);

var server = app.listen(app.get('port'), function() {
  console.log("Listen on : localhost:" , port);
  debug('Express server listening on port ' + server.address().port);
});


// socket.io

var io = require('socket.io');
var fs = require('fs');


var serv_io = io.listen(server);

serv_io.sockets.on('connection', function(socket) {
  socket.on('add user',function(user){
		socket.user = user;
    console.log('new user : '+user);
    serv_io.sockets.in(socket.room).emit('chat message',{ user : user , msg:"加入囉！"});

		//read file
    var filepath = __dirname + '/../notes_record' + '/note_' + socket.room + '.txt';
		fs.exists(filepath , function(exists){
			if(exists){
				fs.readFile(filepath, 'utf8', function(err, contents){
					if(!err){
						//console.log(contents);
						var result = contents.split("\n");
						for(var i = 0; i < result.length -1 ; i++){
								socket.emit('show notes',result[i]);
						}
					}
					else
						consolg.log('Error. Failed to read file.');
				} );

			}
			else {
				console.log('New user, There are no notes can be load.');
			}

		});

  });
  socket.on('msg',function(msg){
		var filename = __dirname + '/../notes_record' + '/note_' + socket.room + '.txt';
		console.log( '(' + msg.type + ')' + socket.user + ':' + msg.msg + "Title : " + socket.room); // msg.title = socket.room and replace some symbol
    serv_io.sockets.in(socket.room).emit('meeting message', { user : socket.user , msg : msg.msg , type : msg.type });
    if(msg.type != "Chat")  // I don't want to records the chat message...
		  fs.appendFile( filename , '(' + msg.type + ')' +  socket.user + ' : ' +msg.msg + '\n', function(error){
			   if(error){
				     console.log('Taking notes error.');
			   }
		  });
  });
  socket.on('join room',function(room){
    socket.room = room;
    socket.join(room);
  });
  socket.on('disconnect',function(){  //disconnect是有特殊意義的!!!不能隨便亂取
    socket.leave(socket.room)
		console.log( socket.user + ' disconnect' );
    serv_io.emit('chat message', { user : socket.user , msg : "已離開" });
  });

});
