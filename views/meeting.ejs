  <script>
    var socket = io();
    //var name = prompt("Input your name : ","guest");
    console.log("<%= data[0].ppt_title %>");
    var name = "<%= user.username %>";
    var title = "<%= data[0].ppt_title %>";
    socket.emit("join room" , title);
    socket.emit("add user", name);
    function msg_send(){
      var message = document.getElementById('msg').value;
      if( message != "" ){
        var inputType = document.getElementById("BtnTextType").innerHTML;
        socket.emit("msg",{msg:message , type : inputType, title:title});
        document.getElementById('msg').value = "";
      }

    };
    socket.on('meeting message', function(msg){
      var ul = document.createElement("ul");
      var new_msg_node = document.createTextNode(msg.user + " : " + msg.msg);
      ul.appendChild(new_msg_node);
      if(msg.type == "Question")
        var element = document.getElementById("message_block");
      else if(msg.type == "Comment")
        var element = document.getElementById("message_block2");
      else
        var element = document.getElementById("message_block3");
      element.appendChild(ul);
    });
    socket.on('show notes', function(records){
      var ul = document.createElement("ul");
      var tmp = records.split(')');
      if(tmp[0] == "(Question"){
        var new_msg_node = document.createTextNode(tmp[1]);
        ul.appendChild(new_msg_node);
        var element = document.getElementById("message_block");
        element.appendChild(ul);
      }
      else if(tmp[0] == "(Comment"){
        var new_msg_node = document.createTextNode(tmp[1]);
        ul.appendChild(new_msg_node);
        var element = document.getElementById("message_block2");
        element.appendChild(ul);
      }
    });
    /*
    function secondsToHms(d) {
      d = Number(d);
      var h = Math.floor(d / 3600);
      var m = Math.floor(d % 3600 / 60);
      var s = Math.floor(d % 3600 % 60);
      return ((h > 0 ? h + ":" + (m < 10 ? "0" : "") : "") + m + ":" + (s < 10 ? "0" : "") + s);
    }*/
    function searchKeyPress(e){
        // look for window.event in case event isn't passed in
        e = e || window.event;
        if (e.keyCode == 13){
            document.getElementById('send').click();
            return false;
        }
        return true;
    }
  </script>
  <script>
    function load_iframe(){
      var patt = /https:.*?&#39/;
      var str = "<%= data[0].url %>";
      var match = patt.exec(str);
      console.log(match[0]);
      var url = match[0].substr(0,match[0].length - 4);
      url = url.replace(/&amp;/g,"&");
      console.log(url);

      var iframeNode = document.createElement("iframe");
      iframeNode.setAttribute("src",url);
      iframeNode.setAttribute("class","embed-responsive-item");
      document.getElementById("slide_block").appendChild(iframeNode);
    }
  </script>
  <script>
    function inputType(btnValue){
      document.getElementById("BtnTextType").innerHTML = btnValue.innerHTML;
    }

  </script>
